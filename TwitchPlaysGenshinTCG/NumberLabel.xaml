<UserControl x:Class="TwitchPlaysGenshinTCG.NumberLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TwitchPlaysGenshinTCG"
             mc:Ignorable="d" 
             d:DesignHeight="36" d:DesignWidth="36">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Ellipse x:Name="circle" Fill="Transparent" Stroke="Black" StrokeThickness="3" Grid.ColumnSpan="2" />
        <Label x:Name="Number"  Content="0" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="26" FontWeight="Bold" Margin="0,-6,0,0" Grid.Column="1"/>
    </Grid>
</UserControl>
