<Window x:Class="TwitchPlaysGenshinTCG.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwitchPlaysGenshinTCG"
        mc:Ignorable="d"
        Title="Overlay" 
        WindowStyle="None" 
        Topmost="True" 
        AllowsTransparency="True" 
        Background="{x:Null}"  
        Height="1080" Width="1920" HorizontalAlignment="Left" VerticalAlignment="Top">
    <Grid x:Name="grid">
        <local:NumberLabel VerticalAlignment="Top" HorizontalAlignment="Left"/>
    </Grid>
</Window>
